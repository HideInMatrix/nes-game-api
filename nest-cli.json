{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "buildCommand": "pnpm build",
  "installCommand": "pnpm install",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "../romFile/**/*",
        "outDir": "dist/romFile"
      },
      {
        "include": "../db/**/*",
        "outDir": "dist/db"
      },
      {
        "include": "../prisma/**/*",
        "outDir": "dist/prisma"
      }
    ],
    "deleteOutDir": true
  }
}
